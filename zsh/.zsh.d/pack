#!/bin/zsh

eval "$(direnv hook zsh)"

if [ `command -v brew` ]; then
    eval "$(brew shellenv)"
    export HOMEBREW_NO_ANALYTICS=1

    # This is used by ruby-build
    export RUBY_CONFIGURE_OPTS="--with-zlib-dir=$(brew --prefix zlib) --with-openssl-dir=$(brew --prefix openssl@3)"
fi

export NVM_DIR="$HOME/.nvm"
export NODE_VERSIONS=$NVM_DIR/versions/node
export NODE_VERSION_PREFIX=v

# JVM + Coursier
export JAVA_HOME="/Users/gui.goncalves/Library/Caches/Coursier/arc/https/github.com/AdoptOpenJDK/openjdk8-binaries/releases/download/jdk8u292-b10/OpenJDK8U-jdk_x64_mac_hotspot_8u292b10.tar.gz/jdk8u292-b10/Contents/Home"
export PATH="$PATH:/Users/gui.goncalves/Library/Application Support/Coursier/bin"

# pipx
export PATH="$PATH:$HOME/.local/bin"
